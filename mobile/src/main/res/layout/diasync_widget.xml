<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/diasync_widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_background"
    android:orientation="vertical"
    android:theme="@style/Theme.DiaSync">

    <ImageView
        android:id="@+id/diasync_widget_canvas"
        android:src="@color/contrast_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/widget_graph_description"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/diasync_widget_alerts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/widget_alerts_icon_description"
            android:cropToPadding="true"
            android:padding="5dp"
            android:src="@drawable/ic_bell_gear" />

        <ImageView
            android:id="@+id/diasync_widget_pip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/widget_pip_icon_description"
            android:cropToPadding="true"
            android:padding="5dp"
            android:src="@drawable/ic_pip" />
    </LinearLayout>
</FrameLayout>