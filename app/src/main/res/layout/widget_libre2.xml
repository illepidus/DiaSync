<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.DiaSync.Libre2Widget"
    android:weightSum="100"
    android:orientation="vertical"
    android:id="@+id/libre2_widget_layout"
    android:background="@color/widget_background" >

    <ImageView
        android:id="@+id/libre2_widget_graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/libre2_widget_graph_description"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/blood_glucose"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:autoSizeTextType="uniform"
            android:contentDescription="@string/libre2_widget_description"
            android:gravity="center"
            android:text="@string/libre2_widget_blood_glucose_text"
            android:textColor="@color/blood_normal"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/data_timer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:autoSizeTextType="uniform"
            android:contentDescription="@string/libre2_widget_description"
            android:gravity="center"
            android:text="@string/libre2_widget_timer_text"
            android:textColor="@color/blood_normal"
            android:textStyle="normal" />
    </LinearLayout>
</FrameLayout>