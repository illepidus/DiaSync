<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.DiaSync.Libre2Widget"
    android:id="@+id/root_layout">

    <TextView
        android:id="@+id/blood_glucose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/libre2_widget_description"
        android:text="@string/libre2_widget_blood_glucose_text"
        android:gravity="center"
        android:textSize="64sp"
        android:background="@color/widget_background"
        android:textColor="@color/blood_normal"
        android:textStyle="normal" />
</RelativeLayout>