<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    app:key="settings_display">

    <PreferenceCategory app:title="General settings">
        <ListPreference
            app:key="glucose_units"
            app:entries="@array/glucose_units_entries"
            app:entryValues="@array/glucose_units_values"
            app:defaultValue="mmol"
            app:title="Glucose units"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:key="glucose_low_pref"
            app:title="Low value"
            app:defaultValue="3.9"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="glucose_high_pref"
            app:title="High value"
            app:defaultValue="10.0"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory app:title="Libre2 widget">
        <ListPreference
            app:key="libre2_widget_on_click"
            app:entries="@array/libre2_widget_on_click_entries"
            app:entryValues="@array/libre2_widget_on_click_values"
            app:defaultValue="settings"
            app:title="On click action"
            app:useSimpleSummaryProvider="true"/>
        <SwitchPreferenceCompat
            app:key="libre2_widget_use_calibration"
            app:title="Use xDrip calibrations"
            app:defaultValue="true" />
        <SwitchPreferenceCompat
            app:key="libre2_widget_graph_enabled"
            app:allowDividerBelow="true"
            app:title="Graph enabled"
            app:defaultValue="true" />
        <ListPreference
            app:key="libre2_widget_graph_period"
            app:dependency="libre2_widget_graph_enabled"
            app:allowDividerAbove="true"
            app:entries="@array/libre2_widget_graph_period_entries"
            app:entryValues="@array/libre2_widget_graph_period_values"
            app:defaultValue="1800000"
            app:title="Graph period"
            app:useSimpleSummaryProvider="true"/>
        <SwitchPreferenceCompat
            app:key="libre2_widget_graph_range_lines"
            app:title="Display range lines"
            app:dependency="libre2_widget_graph_enabled"
            app:defaultValue="false" />
    </PreferenceCategory>

</PreferenceScreen>